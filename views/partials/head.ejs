<script>
  $( function() {
    $( ".slider" ).slider({
      value: 100,
      slide: handleSliderChange
    });
  });


  function handleSliderChange(event, slider){
    var capture = $(this).attr('id');
    console.log(capture);
    $(capture).css('opacity', slider.value / 100);
    $(capture).find('p').text("Level: " + slider.value + '%');
    $(this).parent().find('p').text("Level: " + slider.value + '%');
  }
</script>
