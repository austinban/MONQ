<script>
  $(document).ready(function(){
    $('.switch').on('click', function(e) {
      $('.picker-display-wrapper').toggleClass("picker-display-below picker-display-over"); //you can list several class names
      if ($('.switch').find("span").text() == "Blend" ){
        $('.switch').find("span").text("Plants");
      }
      else{
        $('.switch').find("span").text("Blend")
      }
      e.preventDefault();
    });

    $('.orb').on('click', function(e) {
      $(this).toggleClass('selected');
      e.preventDefault();
    });
  });
</script>

